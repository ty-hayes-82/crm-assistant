  "confidence_scoring": {
    "factors": {
      "exact_title_match": 1.0,
      "partial_title_match": 0.8,
      "contextual_keywords": 0.6,
      "company_size_alignment": 0.4,
      "industry_context": 0.3
    },
    "minimum_confidence": 0.5,
    "review_threshold": 0.75,
    "auto_assign_threshold": 0.9
  },

  "role_validation_rules": {
    "required_review_conditions": [
      "confidence < 0.75",
      "conflicting_title_signals",
      "unknown_title_pattern",
      "executive_level_assignment"
    ],
    "automatic_assignment_conditions": [
      "confidence >= 0.9",
      "exact_title_match",
      "validated_company_context"
    ]
  },

