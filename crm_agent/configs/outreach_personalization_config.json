  "citation_requirements": {
    "mandatory_sources": [
      "company_website",
      "industry_reports",
      "news_articles",
      "social_media_updates"
    ],
    "citation_format": {
      "web_source": "{claim} (Source: {source_name} - {url})",
      "report_source": "{claim} (Source: {report_name}, {date})",
      "news_source": "{claim} (Source: {publication}, {date})"
    },
    "verification_required": true,
    "max_age_days": 90
  },
  
  "engagement_settings": {
    "email_drafts": {
      "auto_send": false,
      "require_approval": true,
      "include_unsubscribe": true,
      "track_opens": true,
      "track_clicks": true
    },
    "follow_up_tasks": {
      "default_due_days": {
        "hot_leads": 1,
        "warm_leads": 3,
        "cold_leads": 7,
        "unqualified": 14
      },
      "priority_mapping": {
        "hot_leads": "HIGH",
        "warm_leads": "MEDIUM",
        "cold_leads": "LOW",
        "unqualified": "LOW"
      },
      "task_types": [
        "EMAIL_FOLLOW_UP",
        "PHONE_CALL",
        "DEMO_PREP",
        "CONTENT_SHARING",
        "MEETING_FOLLOW_UP"
      ]
    },
    "hubspot_associations": {
      "required_associations": ["contact", "company"],
      "optional_associations": ["deal", "ticket"],
      "metadata_fields": [
        "outreach_type",
        "personalization_score",
        "messaging_strategy",
        "lead_score_band",
        "created_by_agent"
      ]
    }
  },
  
  "quality_controls": {
    "content_validation": {
      "max_email_length": 2000,
      "min_personalization_score": 60,
      "required_elements": ["greeting", "value_proposition", "call_to_action"],
      "prohibited_terms": ["spam", "guaranteed", "free money", "act now"]
    },
    "citation_validation": {
      "min_citations": 1,
      "max_citation_age_days": 90,
      "require_url_validation": true,
      "verify_source_credibility": true
    },
    "compliance_checks": {
      "gdpr_compliance": true,
      "can_spam_compliance": true,
      "industry_regulations": ["golf_industry_standards"],
      "opt_out_handling": true
    }
