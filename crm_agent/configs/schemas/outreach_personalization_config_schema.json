{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Outreach Personalization Configuration Schema",
  "description": "Schema for outreach personalizer agent configuration",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration version for reproducibility"
    },
    "personalization_templates": {
      "type": "object",
      "properties": {
        "cold_outreach": {
          "type": "object",
          "properties": {
            "subject_templates": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "intro_templates": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "value_prop_templates": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "cta_templates": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["subject_templates", "intro_templates", "value_prop_templates", "cta_templates"]
        },
        "follow_up": {
          "type": "object",
          "properties": {
            "subject_templates": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "intro_templates": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "value_prop_templates": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "cta_templates": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["subject_templates", "intro_templates", "value_prop_templates", "cta_templates"]
        },
        "demo_invitation": {
          "type": "object",
          "properties": {
            "subject_templates": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "intro_templates": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "value_prop_templates": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "cta_templates": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["subject_templates", "intro_templates", "value_prop_templates", "cta_templates"]
        }
      },
      "additionalProperties": false
    },
    "role_messaging_strategies": {
      "type": "object",
      "properties": {
        "general_manager": {
          "type": "object",
          "properties": {
            "focus_areas": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "tone": {
              "type": "string",
              "enum": ["executive", "professional", "consultative"]
            },
            "key_metrics": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["focus_areas", "tone", "key_metrics"]
        },
        "operations_manager": {
          "type": "object",
          "properties": {
            "focus_areas": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "tone": {
              "type": "string",
              "enum": ["operational", "analytical", "efficiency-focused"]
            },
            "key_metrics": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["focus_areas", "tone", "key_metrics"]
        },
        "fb_manager": {
          "type": "object",
          "properties": {
            "focus_areas": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "tone": {
              "type": "string",
              "enum": ["hospitality", "revenue-focused", "customer-centric"]
            },
            "key_metrics": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["focus_areas", "tone", "key_metrics"]
        },
        "golf_professional": {
          "type": "object",
          "properties": {
            "focus_areas": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "tone": {
              "type": "string",
              "enum": ["member-focused", "instructional", "pro-shop-oriented"]
            },
            "key_metrics": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["focus_areas", "tone", "key_metrics"]
        },
        "it_manager": {
          "type": "object",
          "properties": {
            "focus_areas": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "tone": {
              "type": "string",
              "enum": ["technical", "security-focused", "integration-oriented"]
            },
            "key_metrics": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["focus_areas", "tone", "key_metrics"]
        }
      },
      "additionalProperties": false
    },
    "citation_requirements": {
      "type": "object",
      "properties": {
        "required": {
          "type": "boolean"
        },
        "required_for": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["company_facts", "statistics", "claims", "news", "achievements"]
          }
        },
        "min_citations_per_email": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": ["required", "required_for"],
      "additionalProperties": false
    },
    "personalization_scoring": {
      "type": "object",
      "properties": {
        "weights": {
          "type": "object",
          "properties": {
            "role_relevance": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "company_specificity": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "citation_quality": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "messaging_alignment": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          },
          "additionalProperties": false
        },
        "min_score_threshold": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      },
      "required": ["weights", "min_score_threshold"],
      "additionalProperties": false
    },
    "follow_up_scheduling": {
      "type": "object",
      "properties": {
        "score_band_timing": {
          "type": "object",
          "properties": {
            "hot": {
              "type": "number",
              "minimum": 1
            },
            "warm": {
              "type": "number",
              "minimum": 1
            },
            "cold": {
              "type": "number",
              "minimum": 1
            },
            "unqualified": {
              "type": "number",
              "minimum": 1
            }
          },
          "additionalProperties": false
        },
        "max_follow_ups": {
          "type": "number",
          "minimum": 1
        }
      },
      "required": ["score_band_timing", "max_follow_ups"],
      "additionalProperties": false
    }
  },
  "required": ["version", "personalization_templates", "role_messaging_strategies", "citation_requirements"],
  "additionalProperties": false
}

